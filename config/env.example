# ===========================================
# CONFIGURAÇÕES DE CONTEÚDO
# ===========================================

# Diretórios do pipeline de conteúdo
CONTENT_IDEAS_DIR="2_conteudo/01_ideias_e_rascunhos"
CONTENT_REVIEW_DIR="2_conteudo/02_em_revisao"
CONTENT_APPROVED_DIR="2_conteudo/03_pronto_para_publicar"
CONTENT_PUBLISHED_DIR="2_conteudo/04_publicado"

# Configurações de classificação
DEFAULT_FUNCAO="Diretor"
DEFAULT_NIVEL="Tático"
DEFAULT_AREA_PROBLEMA="Operacional"

# ===========================================
# CONFIGURAÇÕES DE AUTOMAÇÃO
# ===========================================

# Configurações de scripts
AUTO_PUBLISH=false
BACKUP_ENABLED=true
NOTIFICATION_ENABLED=false

# ===========================================
# CONFIGURAÇÕES DE INTEGRAÇÃO
# ===========================================

# WordPress (se aplicável)
WORDPRESS_URL=""
WORDPRESS_USER=""
WORDPRESS_PASSWORD=""

# Outras plataformas
DISCORD_WEBHOOK=""
SLACK_WEBHOOK=""

# ===========================================
# CONFIGURAÇÕES DE DESENVOLVIMENTO
# ===========================================

# Ambiente
ENVIRONMENT="development"
DEBUG=false
LOG_LEVEL="INFO"

# Configurações de backup
BACKUP_DIR="backups"
BACKUP_RETENTION_DAYS=30

# ===========================================
# CONFIGURAÇÕES ESPECÍFICAS DO PROJETO
# ===========================================

# Tags padrão para o projeto
DEFAULT_TAGS="Gestão Educacional,Editorial,Conteúdo"

# Categorias disponíveis
AVAILABLE_CATEGORIES="Financeiro,Pedagógico,Jurídico,Operacional,Pessoas,Infraestrutura,Governança"

# Funções disponíveis
AVAILABLE_FUNCOES="Mantenedor,Secretário,Diretor,Coordenador"

# Níveis disponíveis
AVAILABLE_NIVEIS="Estratégico,Tático,Operacional"
