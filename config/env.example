PROJECT_VERSION="1.0.0"
PROJECT_DESCRIPTION="Modelo profissional para gestão de conteúdo editorial educacional"

# ===========================================
# CONFIGURAÇÕES DO NOTION
# ===========================================

# Token de integração do Notion
NOTION_TOKEN=""

# URLs dos bancos de dados do Notion
NOTION_BIBLIOTECA_URL="https://www.notion.so/2325113a91a381c09b33f826449a218f"
